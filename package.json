{
  "name": "cpp-formatter-vscode",
  "displayName": "C++ Formatter",
  "description": "Форматирование C++ файлов с помощью clang-format",
  "author": {
    "name": "Denis Fotiev",
    "email": "fotiev.d1991@gmail.com",
    "url": "https://github.com/ITSDENISSKA/cpp-formatter-vscode"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ITSDENISSKA/cpp-formatter-vscode.git"
  },
  "publisher": "itsdenisska",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:cppFormatter.formatFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cppFormatter.formatFile",
        "title": "Format C++ File"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "C++ Formatter",
      "properties": {
        "cppFormatter.style": {
          "type": "string",
          "default": "LLVM",
          "enum": [
            "LLVM",
            "Google",
            "Chromium",
            "Mozilla",
            "WebKit"
          ],
          "description": "Выбор базового стиля clang-format"
        },
        "cppFormatter.tabSize": {
          "type": "number",
          "default": 4,
          "description": "Количество пробелов для отступа"
        },
        "cppFormatter.useTab": {
          "type": "string",
          "default": "Never",
          "enum": [
            "Always",
            "Never",
            "ForIndentation"
          ],
          "description": "Использовать табуляцию вместо пробелов"
        },
        "cppFormatter.columnLimit": {
          "type": "number",
          "default": 80,
          "description": "Максимальная длина строки"
        },
        "cppFormatter.breakBeforeBinaryOperators": {
          "type": "string",
          "default": "None",
          "enum": [
            "None",
            "All",
            "NonAssignment"
          ],
          "description": "Перенос строки перед бинарными операторами"
        },
        "cppFormatter.indentCaseLabels": {
          "type": "boolean",
          "default": false,
          "description": "Делать отступ для case в switch"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/vscode": "^1.80.0",
    "tslint": "^6.1.3",
    "typescript": "^5.2.0"
  }
}
